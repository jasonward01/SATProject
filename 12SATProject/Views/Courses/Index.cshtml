@model IEnumerable<SATProject.DATA.EF.Course>

@{
    ViewBag.Title = "Active Courses";

}
<div class="text-center mb-3 mt-3">
    <h2>@ViewBag.Title</h2>
</div>
<p>
    @Html.ActionLink("Add New Course", "Create", null, new { @class = "btn btn-success" }) | @Html.ActionLink("View Retired Courses", "Retired", null, new { @class = "btn btn-danger" })

    <table class="table activeTable">
        <tr class="bg-dark">
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            if (item.IsActive == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreditHours)
                    </td>
                    <td class="courseStatus">
                        @(item.IsActive ? "Active" : "Retired" )
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CourseID }) |
                        @Html.ActionLink("Retire", "Retire", new { id = item.CourseID })
                    </td>
                </tr>
            }
        }
    </table>


